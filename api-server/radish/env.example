# データベース接続情報
DB_HOST=localhost
DB_NAME=mameq_radish
DB_USER=mameq_radish
DB_PASS=your_database_password_here
DB_CHARSET=utf8mb4

# 環境設定
ENVIRONMENT=development
# ENVIRONMENT=production

# JWT設定
# 本番環境では必ず強力な秘密鍵に変更してください
# 生成コマンド: openssl rand -base64 32
JWT_SECRET=your_jwt_secret_here
JWT_ALGORITHM=HS256
JWT_EXPIRATION=604800

# フロントエンドのベースURL
FRONTEND_BASE_URL=https://mameq.xsrv.jp

# メール送信設定
MAIL_FROM=noreply@towndx.com
MAIL_FROM_NAME=Radish System

# SMTP設定（SMTPを使用する場合は以下を設定）
# SMTPを使用しない場合は、PHPのmail()関数が使用されます
MAIL_USE_SMTP=false
MAIL_SMTP_HOST=smtp.example.com
MAIL_SMTP_PORT=587
MAIL_SMTP_SECURE=tls
# MAIL_SMTP_SECURE=tls または ssl（ポート587の場合はtls、465の場合はssl）
MAIL_SMTP_USER=your_smtp_username
MAIL_SMTP_PASS=your_smtp_password
MAIL_SMTP_AUTH=true

