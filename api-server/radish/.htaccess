# エックスサーバー用 .htaccess
# http://mameq.xsrv.jp/radish/ に配置

# PHPバージョン指定（必要に応じて変更）
# AddHandler application/x-httpd-php74 .php

# エラーページの設定
ErrorDocument 404 /radish/index.php

# CORS設定はPHP側で動的に設定します
# セッションを使用するため、具体的なオリジンを指定する必要があります

# Authorizationヘッダーを保持（リバースプロキシ経由でも削除されないように）
<IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteCond %{HTTP:Authorization} .
    RewriteRule .* - [E=HTTP_AUTHORIZATION:%{HTTP:Authorization}]
</IfModule>

# URLリライト（APIルーティング）
<IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteBase /radish/
    
    # v1 APIルーティング（OPTIONSリクエストも含む）
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteRule ^v1/(.*)$ v1/index.php [QSA,L]
    
    # 旧APIルーティング（後方互換性のため）
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteRule ^api/(.*)$ api/index.php [QSA,L]
</IfModule>

